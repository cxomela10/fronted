@using WebApplication4.ViewModels;
@model ViewHotel

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" placeholder="Address" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Mail" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Mail" class="form-control" placeholder="Mail" />
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class = "col-sm-10">
            <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
            </div>       
    </div>

<br />

<div class="form-group row">
    <label asp-for="City" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
            <select asp-for="City" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<City>()"></select>
    </div>
</div>

    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="custum-file">
            <input asp-for="Photo" class="form-control custum-fil-input" />
        </div>
    </div>


<br />

<div class="form-group row">
    <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</div>


</form>